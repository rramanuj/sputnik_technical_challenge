#!/usr/bin/env bash
{ set +x; } 2>/dev/null

[[ $# != 1 ]] || [[ $1 == "--help" ]] && {
	cat <<EOF
usage: ${BASH_SOURCE[0]##*/} url
EOF
exit 1
}
# -L follow redirect
r="$(curl -I -s -L "$1")" || exit
[[ $r == *"HTTP/1.1 200 OK"* ]] && exit 0
echo "$r" | head -1 # output HTTP status
exit 1
# HTTP/1.1 404 Not Found


